@model IEnumerable<CET96_ProjetoFinal.web.Entities.Company>

@{
    ViewData["Title"] = "Inactive Companies";
}

<h1>Inactive Companies</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Tax ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-secondary">
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.TaxId)</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-2">Details</a>
                    <a asp-action="Reactivate" asp-route-id="@item.Id" class="btn btn-sm btn-success">Reactivate</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary mt-3">Back to Dashboard</a>
</div>
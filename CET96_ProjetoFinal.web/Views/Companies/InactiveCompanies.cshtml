@model IEnumerable<CET96_ProjetoFinal.web.Entities.Company>

@{
    ViewData["Title"] = "Inactive Companies";
}

<h1>Inactive Companies</h1>
<p>The following companies have been deactivated. They can be reactivated at any time.</p>

<div class="mt-3 mb-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</div>

@if (Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Tax ID</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-secondary">
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.TaxId)</td>
                    <td>
                        <span class="badge bg-danger">Inactive</span>
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-2">Details</a>

                        @* The "Reactivate" button must be inside a form to send a POST request *@
                        <form asp-action="Reactivate" asp-route-id="@item.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-success">Reactivate</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        There are no inactive companies to display.
    </div>
}
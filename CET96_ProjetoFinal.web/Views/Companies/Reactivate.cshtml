@model CET96_ProjetoFinal.web.Entities.Company

@{
    ViewData["Title"] = "Reactivate Company";
}

<h1>Reactivate Company</h1>
<h3>Are you sure you want to reactivate this company?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">Tax ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TaxId)</dd>
    </dl>

    <form asp-action="Reactivate">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Reactivate" class="btn btn-success" /> 
        <a asp-action="InactiveCompanies" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
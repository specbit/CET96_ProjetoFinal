@model CET96_ProjetoFinal.web.Entities.Company

@{
    ViewData["Title"] = "Company Details";
}

<h1>Company Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-3">Tax ID</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TaxId)</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-danger">Inactive</span>
            }
        </dd>
    </dl>
</div>
<div class="mt-3">
    @if (Model.IsActive)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Deactivate</a>
    }
    else
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Reactivate" asp-route-id="@Model.Id" class="btn btn-success">Reactivate</a>
    }
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Back to Dashboard</a>
</div>
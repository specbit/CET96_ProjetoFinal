@model CET96_ProjetoFinal.web.Entities.Company

@{
    ViewData["Title"] = "Company Details";
}

<h1>Company Details</h1>

<div class="card-body">
    <dl class="row">
        <dt class="col-sm-3">Tax ID</dt>
        <dd class="col-sm-9">@Model.TaxId</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Company Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Admin Name</dt>
        <dd class="col-sm-9">@Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName</dd>

        <dt class="col-sm-3">Admin Email</dt>
        <dd class="col-sm-9">@Model.ApplicationUser.Email</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-danger">Inactive</span>
            }
        </dd>
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

        @if (Model.UpdatedAt.HasValue)
        {
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UpdatedAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedAt)</dd>
        }
        @if (Model.DeletedAt.HasValue)
        {
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DeletedAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DeletedAt)</dd>
        }

        @* Moved to the end and made conditional *@
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        }
    </dl>
</div>
<div class="mt-3">
    @if (Model.IsActive)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Deactivate</a>
    }
    else
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Reactivate" asp-route-id="@Model.Id" class="btn btn-success">Reactivate</a>
    }
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Back to Dashboard</a>
</div>
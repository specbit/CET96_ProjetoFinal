@model CET96_ProjetoFinal.web.Entities.Condominium

@{
    ViewData["Title"] = "Deactivate Condominium";
}

<h1>Deactivate</h1>
<h3 class="text-danger">Are you sure you want to deactivate this condominium?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>

    <form asp-action="Delete">
        @* This hidden input is crucial for the form to work *@
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Yes, Deactivate" class="btn btn-danger" />
        <a asp-action="Index" asp-route-id="@Model.CompanyId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@model IEnumerable<CET96_ProjetoFinal.web.Entities.Condominium>

@{
    ViewData["Title"] = "Inactive Condominiums";
    var companyId = ViewBag.CompanyId;
}

<h1>Inactive Condominiums</h1>
<hr />
<p>
    <a asp-action="Index" asp-route-id="@companyId" class="btn btn-secondary">Back to Active List</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">There are no inactive condominiums for this company.</div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <strong>Address:</strong> @item.Address<br />
                            <strong>Units:</strong> @item.Units.Count()<br />
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-danger">Inactive</span>

                            @* This form will POST to the new Activate action *@
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                                <form asp-action="Activate" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-success">Reactivate</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}


@model IEnumerable<CET96_ProjetoFinal.web.Models.ApplicationUserWithRolesViewModel>

@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>
                    @{
                        // Split the roles string into individual roles
                        var roles = item.Roles.Split(new[] { ", " }, StringSplitOptions.None);
                        foreach (var role in roles)
                        {
                            string badgeClass = "bg-secondary"; // Default color
                            if (role == "Administrador") { badgeClass = "bg-danger"; }
                            if (role == "Funcionário") { badgeClass = "bg-warning text-dark"; }
                            if (role == "Cliente") { badgeClass = "bg-primary"; }

                            <span class="badge @badgeClass">@role</span>
                        }
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
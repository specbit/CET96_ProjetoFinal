@model CET96_ProjetoFinal.web.Entities.ApplicationUser

@{
    ViewData["Title"] = "Deactivate User";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Are you sure you want to deactivate this user and all their associated companies?</h3>
<p class="text-danger">This action will permanently disable their login.</p>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <form asp-action="DeactivateUserAndCompanies" method="post">
        <input type="hidden" name="userIdToDeactivate" value="@Model.Id" />
        <input type="submit" value="Yes, Deactivate User & Companies" class="btn btn-danger" />
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@model CET96_ProjetoFinal.web.Models.HomeViewModel

@{
    ViewData["Title"] = "User Management";
}

<div class="container mb-4">
    <h1 class="display-4">User Manager Dashboard</h1>
    <p class="lead">Manage all platform users from the table below.</p>
</div>
<div class="card">
    <div class="card-header"><h5 class="mb-0">System Users</h5></div>
    <div class="card-body">
        <table class="table table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.AllUsers)
                {
                    <tr>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.UserName</td>
                        <td>
                            @foreach (var role in user.Roles)
                            {
                                var badgeClass = "bg-secondary"; // A default color
                                if (role == "Platform Administrator") { badgeClass = "bg-danger text-white"; }
                                else if (role == "Company Administrator") { badgeClass = "bg-primary text-white"; }
                                else if (role == "Condominium Manager") { badgeClass = "bg-success text-white"; }
                                else if (role == "Condominium Staff") { badgeClass = "bg-info text-dark"; }
                                else if (role == "Unit Owner") { badgeClass = "bg-warning text-dark"; } // Added this line

                                <span class="badge @badgeClass me-1">@role</span>
                            }
                        </td>
                        <td>
                            @if (user.IsDeactivated)
                            {
                                <span class="badge bg-danger">Deactivated</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </td>
                        <td class="text-end">
                            @if (user.Roles.Contains("Company Administrator"))
                            {
                                @if (user.IsDeactivated)
                                {
                                    <a asp-controller="PlatformAdmin" asp-action="ActivateUser" asp-route-id="@user.Id" class="btn btn-sm btn-success">Activate</a>
                                }
                                else
                                {
                                    <a asp-controller="PlatformAdmin" asp-action="DeactivateUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Deactivate</a>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
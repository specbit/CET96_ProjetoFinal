@model IEnumerable<CET96_ProjetoFinal.web.Entities.ApplicationUser>
@inject CET96_ProjetoFinal.web.Repositories.IApplicationUserRepository UserRepository

@{
    ViewData["Title"] = "Platform Dashboard";
}

<div class="container mb-4">
    <h1 class="display-4">Platform Administrator Dashboard</h1>
    <p class="lead">Manage all platform users from the table below.</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">System Users</h5>
    </div>
    <div class="card-body">
        <table class="table table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.LockoutEnd > DateTime.Now)
                            {
                                <span class="badge bg-danger">Deactivated</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </td>
                        <td class="text-end">
                            @if (await UserRepository.IsInRoleAsync(user, "Company Administrator") && user.LockoutEnd < DateTime.Now)
                            {
                                <a asp-action="DeactivateUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Deactivate User & Companies</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
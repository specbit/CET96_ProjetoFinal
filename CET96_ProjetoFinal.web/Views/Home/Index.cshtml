@model CET96_ProjetoFinal.web.Models.HomeViewModel
@inject CET96_ProjetoFinal.web.Repositories.IApplicationUserRepository UserRepository

@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    @* === PLATFORM ADMINISTRATOR DASHBOARD LINK === *@
    @if (User.IsInRole("Platform Administrator"))
    {
        <div class="container mb-4">
            <h1 class="display-4">Platform Administrator Dashboard</h1>
            <p class="lead">Welcome! Use the button below to access the user management panel.</p>
            <hr />
            <p>
                @* THIS IS THE CORRECTED LINK *@
                <a asp-controller="PlatformAdmin" asp-action="UserManager" class="btn btn-primary btn-lg">Go to User Management</a>
            </p>
        </div>
    }

    @* === COMPANY ADMINISTRATOR DASHBOARD === *@
    else if (User.IsInRole("Company Administrator"))
    {
        <div class="container">
            <h1 class="display-4">Administrator Dashboard</h1>
            <p class="lead">Manage your companies from the cards below.</p>
            <p>
                <a asp-controller="Companies" asp-action="Create" class="btn btn-primary">Create New Company</a>
                <a asp-controller="Companies" asp-action="InactiveCompanies" class="btn btn-secondary">View Inactive Companies</a>
            </p>
        </div>
        <hr />

        @if (Model.Companies != null && Model.Companies.Any())
        {
            <div class="row">
                @foreach (var company in Model.Companies)
                {
                    <div class="col-md-4 mb-4">
                        <a href="@Url.Action("Index", "Condominiums", new { id = company.Id })" class="card-link" style="text-decoration:none; color:inherit;">
                            <div class="card position-relative">
                                <div class="card-body">

                                    <span class="position-absolute top-0 end-0 m-2 badge bg-success">Active</span>

                                    <h5 class="card-title">@company.Name</h5>
                                    <p class="card-text">@company.Address</p>
                                    <a asp-controller="Companies" asp-action="Details" asp-route-id="@company.Id" class="btn btn-info">Details</a>
                                    <a asp-controller="Companies" asp-action="Edit" asp-route-id="@company.Id" class="btn btn-warning">Edit</a>
                                    <a asp-controller="Companies" asp-action="Delete" asp-route-id="@company.Id" class="btn btn-danger">Deactivate</a>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                You have no active companies. Click "Create New Company" to get started.
            </div>
        }
    }

    @* === CONDOMINIUM MANAGER DASHBOARD === *@
    else if (User.IsInRole("Condominium Manager"))
    {
        <div class="container mb-4">
            <h1 class="display-4">Condominium Manager Dashboard</h1>
            <p class="lead">Welcome! From here you can manage all aspects of your assigned condominium.</p>
            <hr />

            @if (Model.IsManagerAssignedToCondominium)
            {
                <p>
                    <span style="font-size: 1.5rem; font-weight: bold;">Condominium Name:</span>
                    <span style="font-size: 1.2rem; vertical-align: baseline;">@Model.CondominiumName</span>
                </p>
                <p><strong>Address:</strong> @Model.CondominiumAddress</p>
                <p><strong>Zip Code:</strong> @Model.ZipCode</p>
                <p><strong>City:</strong> @Model.City</p>
                <p><strong>Zip Code:</strong> @Model.ZipCode</p>
                <p><strong>Number of Units:</strong> @Model.UnitsCount</p>

                <div class="mt-3">
                    <a asp-controller="Units" asp-action="Index" asp-route-condominiumId="@Model.CondominiumId" class="btn btn-success">Manage Units</a>
                    <a asp-controller="CondominiumStaff" asp-action="Index" asp-route-condominiumId="@Model.CondominiumId" class="btn btn-primary">Manage Staff</a>
                </div>

                <br />

                <h4>Condominium Staff</h4>
                <table class="table">
                    @* ... table head ... *@
                    <tbody>
                        @if (Model.CondominiumStaff != null && Model.CondominiumStaff.Any())
                        {
                            @foreach (var staff in Model.CondominiumStaff)
                            {
                                <tr>
                                    <td>@staff.FirstName @staff.LastName</td>
                                    <td>@staff.Email</td>
                                    <td>@staff.Profession</td>
                                    <td>
                                        @if (staff.DeactivatedAt.HasValue)
                                        {
                                            <span class="badge bg-danger">Deactivated</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-warning">Edit</a>
                                        <a class="btn btn-sm btn-danger">Deactivate</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">No staff members have been added yet.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning">
                    You are not currently assigned to a condominium.
                </div>
            }
        </div>
    }
    @* === DEFAULT LOGGED-IN USER DASHBOARD === *@
    else
    {
        <div class="text-center">
            <h1 class="display-4">Welcome</h1>
            <p>You are logged in.</p>
        </div>
    }
}
@* === NOT LOGGED-IN USER WELCOME PAGE === *@
else
{
    <div class="text-center">
        <h1 class="display-4">Welcome to CondoManagerPrime</h1>
        <p>Your premium solution for condominium management.</p>
        <p>Register your companies and manage your condominiums or Login to your account.</p>
    </div>
}

@section Scripts {
    <style>
        .card-link {
            text-decoration: none;
            color: inherit;
        }

            .card-link .card:hover {
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }
    </style>
}
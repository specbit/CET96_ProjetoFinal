@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("Platform Administrator"))
    {
        @if (TempData["StatusMessage"] != null)
        {
            <div class="alert alert-success">@TempData["StatusMessage"]</div>
        }

        <div class="container mb-4">
            <h1 class="display-4">User Manager Dashboard</h1>
            <p class="lead">Manage all platform users from the table below.</p>
        </div>
        <div class="card">
            <div class="card-header"><h5 class="mb-0">System Users</h5></div>
            <div class="card-body">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.AllUsers)
                        {
                            <tr>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.UserName</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-info me-1">@role</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsDeactivated)
                                    {
                                        <span class="badge bg-danger">Deactivated</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-success">Active</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (user.Roles.Contains("Company Administrator"))
                                    {
                                        @if (user.IsDeactivated)
                                        {
                                            <a asp-controller="PlatformAdmin" asp-action="ActivateUser" asp-route-id="@user.Id" class="btn btn-sm btn-success">Activate</a>
                                        }
                                        else
                                        {
                                            <a asp-controller="PlatformAdmin" asp-action="DeactivateUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Deactivate</a>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else if (User.IsInRole("Company Administrator"))
    {
        @if (TempData["StatusMessage"] != null)
        {
            <div class="alert alert-success">@TempData["StatusMessage"]</div>
        }

        <div class="container">
            <h1 class="display-4">Administrator Dashboard</h1>
            <p class="lead">Manage your companies from the cards below.</p>
            <p>
                <a asp-controller="Companies" asp-action="Create" class="btn btn-primary">Create New Company</a>
                <a asp-controller="Companies" asp-action="InactiveCompanies" class="btn btn-secondary">View Inactive Companies</a>
            </p>
        </div>
        <hr />
        <div class="row">
            @foreach (var company in Model.Companies)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@company.Name</h5>
                            <p class="card-text">@company.Address</p>
                            <a asp-controller="Companies" asp-action="Details" asp-route-id="@company.Id" class="btn btn-info">Details</a>
                            <a asp-controller="Companies" asp-action="Edit" asp-route-id="@company.Id" class="btn btn-warning">Edit</a>
                            <a asp-controller="Companies" asp-action="Delete" asp-route-id="@company.Id" class="btn btn-danger">Deactivate</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center">
            <h1 class="display-4">Welcome</h1>
            <p>You are logged in.</p>
        </div>
    }
}
else
{
    <div class="text-center">
        <h1 class="display-4">Welcome to CondoManagerPrime</h1>
        <p>Your premium solution for condominium management.</p>
    </div>
}
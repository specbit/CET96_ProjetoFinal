@model CET96_ProjetoFinal.web.Entities.ApplicationUser

@{
    ViewData["Title"] = "Staff Details";
}

<h1>Staff Details</h1>
<hr />

<div class="card-body">
    <dl class="row">
        <dt class="col-sm-3">First Name</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3">Last Name</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Profession</dt>
        <dd class="col-sm-9">@Model.Profession</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.DeactivatedAt.HasValue)
            {
                <span class="badge bg-danger">Deactivated</span>
                <span class="text-muted" style="font-size: 0.9em;">(on @Model.DeactivatedAt.Value.ToString("g"))</span>
            }
            else if (!Model.EmailConfirmed)
            {
                <span class="badge bg-warning text-dark">Pending Confirmation</span>
            }
            else
            {
                <span class="badge bg-success">Active</span>
            }
        </dd>

        <dt class="col-sm-3">Document Type</dt>
        <dd class="col-sm-9">@Model.DocumentType</dd>

        <dt class="col-sm-3">ID Number</dt>
        <dd class="col-sm-9">@Model.IdentificationDocument</dd>

        <dt class="col-sm-3">Works For Company</dt>
        <dd class="col-sm-9">@ViewBag.CompanyName</dd>

        @if (ViewBag.CondominiumName != "N/A")
        {
            <dt class="col-sm-3">Assigned Condominium</dt>
            <dd class="col-sm-9">@ViewBag.CondominiumName</dd>
        }

        <dt class="col-sm-3">Account Created</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

        @if (Model.UpdatedAt.HasValue)
        {
            <dt class="col-sm-3">Last Updated</dt>
            <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("g")</dd>
        }
    </dl>
</div>
<div class="mt-3">
    <a asp-controller="Account" asp-action="EditAccount" asp-route-id="@Model.Id" class="btn btn-warning">Edit Staff</a>
    <a asp-controller="Account" asp-action="AllCondominiumStaffByCompany" asp-route-id="@Model.CompanyId" class="btn btn-outline-secondary">Back to Staff List</a>
</div>
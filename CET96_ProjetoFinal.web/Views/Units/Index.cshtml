@model IEnumerable<CET96_ProjetoFinal.web.Entities.Unit>

@{
    ViewData["Title"] = $"Manage Units for {ViewBag.CondominiumName}";
}

<h1>Manage Units for <strong>@ViewBag.CondominiumName</strong></h1>

<p>
    <a asp-action="Create" asp-route-condominiumId="@ViewBag.CondominiumId" class="btn btn-primary">Create New Unit</a>
    <a asp-action="InactiveUnits" asp-route-condominiumId="@ViewBag.CondominiumId" class="btn btn-warning">View Inactive Units</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Unit Number</th>
            <th>Owner</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var unit in Model)
            {
                <tr>
                    <td>@unit.UnitNumber</td>
                    <td>(Not Assigned)</td>
                    <td>
                        @if (unit.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@unit.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a class="btn btn-sm btn-info disabled">Assign Owner</a> @* Disabled for now *@
                        @* Changed the delete to a form for security reasons *@
                        <form asp-action="Delete" asp-route-id="@unit.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Deactivate</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No units have been added yet.</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</div>
@model EditUnitViewModel

@{
    ViewData["Title"] = "Edit Unit";
}

<h1>Edit Unit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CondominiumId" />

            <div class="form-group mb-3">
                <label asp-for="UnitNumber" class="control-label"></label>
                <input asp-for="UnitNumber" class="form-control" />
                <span asp-validation-for="UnitNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" asp-route-condominiumId="@Model.CondominiumId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>